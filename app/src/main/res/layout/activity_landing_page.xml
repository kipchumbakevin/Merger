<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDont"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="2dp"
    tools:context=".LandingPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/ff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:fitsSystemWindows="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/kenya"
        android:paddingStart="5dp"
        android:textSize="15sp"
        android:layout_marginTop="150dp"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/kenya"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="@drawable/text"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="KENYA"
        app:layout_constraintTop_toBottomOf="@id/ff"/>
    <TextView
        android:id="@+id/nigeria"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/text"
        android:textColor="#ffffff"
        android:layout_height="30dp"
        android:drawablePadding="20dp"
        android:paddingStart="5dp"
        android:drawableStart="@drawable/nigeria"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="NIGERIA"
        app:layout_constraintTop_toBottomOf="@id/kenya"/>
    <TextView
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:paddingStart="5dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="20dp"
        android:textSize="15sp"
        android:drawableStart="@drawable/india"
        android:layout_height="30dp"
        android:background="@drawable/text"
        app:layout_constraintStart_toStartOf="parent"
        android:text="INDIA"
        app:layout_constraintTop_toBottomOf="@id/nigeria"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/policy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/india"
        android:layout_marginTop="10dp"
        android:text="By proceeding, you agree to our Privacy Policy"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:drawableEnd="@drawable/ic_share"
        android:textColor="#ffffff"
        android:text="Share"
        android:layout_marginBottom="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_star"
        android:textColor="#ffffff"
        android:text="Rate Us"
        android:layout_marginBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
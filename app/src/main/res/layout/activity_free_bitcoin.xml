<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:background="@color/colorDont"
    android:layout_height="match_parent"
    tools:context=".makemoney.FreeBitcoinActivity">
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:text="Free Bitcoin"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/learnmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn more -->"
        android:textColor="@color/colorWhite"
        android:background="@drawable/textview"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/learnmore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/meso"
            android:background="@drawable/texttext"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:scrollbars="vertical"
            android:padding="5dp"
            android:text="@string/freebitcoin"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

    </ScrollView>
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>